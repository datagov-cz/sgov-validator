# SKOS integrity constraint S13
# https://www.w3.org/TR/2009/REC-skos-reference-20090818/#L1567
#
@prefix skos:          <http://www.w3.org/2004/02/skos/core#> .
@prefix sh:            <http://www.w3.org/ns/shacl#> .
@prefix j-sgov-obecný: <https://slovník.gov.cz/jazyk/obecný/> .

j-sgov-obecný:g11a
    a              sh:NodeShape ;
    sh:severity    sh:Violation ;
    sh:message     "Synonymum nesmí být stejné jako název."@cs,
                   "The synonym cannot be the same as the preferred label."@en ;
    sh:targetClass skos:Concept ;
    sh:property     [
        sh:path skos:prefLabel ;
        sh:disjoint skos:altLabel ;
    ]
.

j-sgov-obecný:g11b
    a              sh:NodeShape ;
    sh:severity    sh:Violation ;
    sh:message     "Vyhledávací text nesmí být stejný jako název."@cs,
                   "The search string cannot be the same as the preferred label."@en ;
    sh:targetClass skos:Concept ;
    sh:property     [
        sh:path skos:prefLabel ;
        sh:disjoint skos:hiddenLabel ;
    ]
.

j-sgov-obecný:g11c
    a              sh:NodeShape ;
    sh:severity    sh:Violation ;
    sh:message     "Vyhledávací text nesmí být stejný jako synonymum."@cs,
                   "The search string cannot be the same as the synonym."@en ;
    sh:targetClass skos:Concept ;
    sh:property     [
        sh:path skos:altLabel ;
        sh:disjoint skos:hiddenLabel ;
    ]
.
