@prefix skos:          <http://www.w3.org/2004/02/skos/core#> .
@prefix sh:            <http://www.w3.org/ns/shacl#> .
@prefix j-sgov-obecný: <https://slovník.gov.cz/jazyk/obecný/> .

j-sgov-obecný:g5a
    a              sh:NodeShape ;
    sh:severity    sh:Info ;
    sh:message     "Název je delší než 150 znaků."@cs,
                   "The preferred label is longer than 150 characters."@en ;
    sh:targetClass skos:Concept ;
    sh:path        skos:prefLabel ;
    sh:maxLength   150
.

j-sgov-obecný:g5b
    a              sh:NodeShape ;
    sh:severity    sh:Info ;
    sh:message     "Název je kratší než 2 znaky."@cs,
                   "The preferred label is shorter than 2 characters."@en ;
    sh:targetClass skos:Concept ;
    sh:path        skos:prefLabel ;
    sh:minLength   2
.
